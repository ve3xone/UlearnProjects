<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="clr-namespace:Rivals.UI"
        x:Class="Rivals.UI.MainWindow"
        Width="800"
        Height="860"
        Title="Pattern">
    <Grid RowDefinitions="60,*">
        <DockPanel Name="Buttons" Background="Gray" />
        <Panel Grid.Row="1" Background="Black">
            <Viewbox
                Stretch="Uniform">
                <ui:ScenePainter
                    Name="ScenePainter"
                    Width="1000"
                    Height="1000" />
            </Viewbox>
        </Panel>
    </Grid>
</Window>